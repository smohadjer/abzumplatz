{
    "form": {
        "method": "POST",
        "action": "/api/signup",
        "disableBrowserValidation": true,
        "disableClientSideValidation": false
    },
    "fields": [
        {
            "name": "first_name",
            "label": "Vorname",
            "type": "text",
            "required": true,
            "value": ""
        },
        {
            "name": "last_name",
            "label": "Nachname",
            "type": "text",
            "required": true,
            "value": ""
        },
        {
            "name": "role",
            "label": "Rolle",
            "type": "radio",
            "required": true,
            "options": [
                {"label": "Spieler", "value": "player"},
                {"label": "Vereinsadmin", "value": "admin"}
            ],
            "value": ""
        },
        {
            "name": "email",
            "label": "Email",
            "type": "email",
            "autocomplete": "email",
            "required": true,
            "value": ""
        },
        {
            "name": "password",
            "label": "Passwort",
            "type": "password",
            "autocomplete": "password",
            "required": true,
            "hasStrengthIndicator": true,
            "hasDisplayToggle": true,
            "value": ""
        },
        {
            "name": "privacy",
            "label": "Datenschutz",
            "type": "checkbox",
            "options": [
                {
                    "label": "Mit Ihrer Registrierung und Nutzung dieser App erklären Sie sich damit einverstanden, dass die von Ihnen angegebenen Informationen und Ihre Nutzungsstatistiken vom App-Entwickler und dem Administrator Ihres Vereins verwendet werden dürfen, um die Funktionalität der App zu verbessern, Benutzer zu unterstützen und die ordnungsgemäße Verwendung der Vereinsressourcen sicherzustellen.",
                    "value": "agree"
                }
            ],
            "required": true,
            "value": ""
        }
    ]
}
